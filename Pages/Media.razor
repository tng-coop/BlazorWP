@page "/media"

<div class="app-layout">
  <nav class="sidebar">
    <!-- your existing nav links here -->
  </nav>

  <main class="content">
    <h3>Media Library</h3>
    <iframe
      src="/wp-admin/upload.php?TB_iframe=1"    <!-- ← absolute root path -->
      class="media-iframe"
      onload="(function(doc){
        /* hide WP admin bar & header inside the iframe */
        const style = doc.createElement('style');
        style.textContent = `
          #wpadminbar,
          #adminmenuwrap,
          #adminmenumain,
          .wrap > h1,
          #wpfooter {
            display: none !important;
          }
          /* pull the media grid right to the top */
          html, body, #wpbody-content, .wrap {
            margin: 0 !important;
            padding: 0 !important;
            height: 100% !important;
          }
        `;
        doc.head.appendChild(style);
      })(this.contentDocument || this.contentWindow.document)"
    ></iframe>
  </main>
</div>

<style>
  .app-layout { display: flex; height: 100vh; }
  .sidebar   { width: 250px; /* your nav width */ }
  .content   { flex: 1; position: relative; overflow: hidden; }
  .media-iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }
</style>
